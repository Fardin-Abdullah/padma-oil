<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.padmaoilcompany.MReviewSafetyViewController"
            prefHeight="400.0" prefWidth="600.0">

    <Label style="-fx-font-size: 18; -fx-background-color: yellow;" text="Review Safety Compliance"
           AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0"/>

    <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
          AnchorPane.topAnchor="50.0">
        <Label text="Safety Reports:"/>
        <Button onAction="#viewComplianceReportOnAction" text="View Compliance Report"/>
        <Button onAction="#generateNewReportOnAction" text="Generate New Report"/>
    </VBox>
</AnchorPane>
