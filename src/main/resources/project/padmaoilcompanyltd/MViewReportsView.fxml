<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.padmaoilcompanyltd.ViewProductionReportsController">
    <children>
        <!-- Header -->
        <Label text="Production Reports" style="-fx-font-size: 18; -fx-background-color: yellow;"
               AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" />

        <!-- Main Content -->
        <VBox spacing="10.0" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
            <!-- Report Selection -->
            <Label text="Select Report Type:" />
            <ComboBox fx:id="reportTypeComboBox" promptText="Choose report type..." />
            <Button text="Fetch Report" onAction="#fetchReportAction" />

            <!-- Placeholder for Report Output -->
            <Label fx:id="reportOutputLabel" text="Report will be displayed here..." wrapText="true" />
        </VBox>
    </children>
</AnchorPane>
